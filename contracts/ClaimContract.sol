    function mint(address to, uint256 amount) external;
}

contract claimContract is Ownable {
    using SafeMath for uint;

    event SetRewards(address indexed walletAddress, uint256 tokenAmount);
    event Claim(address indexed walletAddress, uint256 tokenAmount);

    mapping(address => uint256) public rewards;
    address public testToken;
    mapping(address => bool) public whitelist;

    constructor(address _testToken) {
        testToken = _testToken;
        whitelist[msg.sender] = true;
    }

    function setRewards(address walletAddress, uint tokenAmount) external onlyOwner {
        require(tokenAmount > 0);
        ITestToken(testToken).mint(address(this), tokenAmount);

        rewards[walletAddress] = tokenAmount;

        emit SetRewards(walletAddress, tokenAmount);
    }

    function claim(uint claimAmount) public {
        require( rewards[msg.sender] >= claimAmount, "Not enough reward!" );
        require( whitelist[msg.sender], "Not enough reward!" );
        ITestToken(testToken).transfer( msg.sender, claimAmount);
        rewards[msg.sender] = rewards[msg.sender].sub(claimAmount);
        emit Claim(msg.sender, claimAmount);
    }

    function setWhitelist(address user, bool flag) public onlyOwner {
        whitelist[user] = flag;
    }
}